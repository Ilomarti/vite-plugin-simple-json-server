{
  "include": ["src"],
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/handlers/*": ["src/handlers/*"]
    }
  }
}
